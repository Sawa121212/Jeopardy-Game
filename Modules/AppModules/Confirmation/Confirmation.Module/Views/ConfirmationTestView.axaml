<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:localization="clr-namespace:Common.Core.Localization;assembly=Common.Core"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:viewsModel="clr-namespace:Confirmation.Module.Views"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:Class="Confirmation.Module.Views.ConfirmationTestView"
             x:DataType="viewsModel:ConfirmationTestViewModel">

    <StackPanel Orientation="Vertical"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Spacing="3">
        <Button Content="Info note"
                Command="{Binding ShowInfoMessageCommand}" />
        <Button Content="Warning note"
                Command="{Binding ShowWarningMessageCommand}" />
        <Button Content="Error note"
                Command="{Binding ShowErrorMessageCommand}" />
    </StackPanel>
</UserControl>