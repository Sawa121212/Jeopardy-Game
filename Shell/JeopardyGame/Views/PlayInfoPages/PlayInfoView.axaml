<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:playInfoPages="clr-namespace:JeopardyGame.Views.PlayInfoPages"
             xmlns:firstRuns="clr-namespace:JeopardyGame.Views.PlayInfoPages.FirstRuns"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="JeopardyGame.Views.PlayInfoPages.PlayInfoView">

    <TabControl>
        <TabItem Header="Правила игры">
            <playInfoPages:ProgressGamePage />
        </TabItem>
        <TabItem Header="Первый запуск">
            <firstRuns:FirstRunView />
        </TabItem>
    </TabControl>
</UserControl>