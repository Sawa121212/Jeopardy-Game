<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             x:Class="JeopardyGame.App">

    <!-- Используем стиль Material.Avalonia -->
    <Application.Styles>
        <themes:MaterialTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="Indigo" />
        <materialIcons:MaterialIconStyles />

        <!-- Custom -->
        <StyleInclude Source="avares://Common.Resources/CustomStyles.xaml" />

    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Common.Resources/CustomToolKit.xaml" />
                <ResourceInclude Source="avares://Common.Resources/Geometries.axaml" />
                <ResourceInclude Source="avares://Notification.Module/Styles/NotificationStyle.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>